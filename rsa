# Description: This program reads a file with a list of numbers and prints the prime factors of each number.

import math
import sys


def is_prime(n):
    """
    Return True if n is prime, False otherwise.

    Args:
        n -- int: number to check for primality

    Returns:
        bool: True if n is prime, False otherwise
    """
    if n == 2:
        return True
    if n < 2 or n % 2 == 0:
        return False
    for i in range(3, math.isqrt(n) + 1, 2):
        if n % i == 0:
            return False
    return True


def gcd(a, b):
    """
    Return the greatest common divisor of a and b.

    Args:
        a -- int: first number
        b -- int: second number

    Returns:
        int: greatest common divisor of a and b
    """
    while b != 0:
        a, b = b, a % b
    return a


def pollards_rho(n):
    """
    Return a non-trivial factor of n.

    Args:
        n -- int: number to factor

    Returns:
        int: a non-trivial factor of n
    """
    x = 2
    y = 2
    d = 1
    f = lambda x: (x**2 + 1) % n
    while d == 1:
        x = f(x)
        y = f(f(y))
        d = gcd(abs(x - y), n)
    if d != n:
        return d


def read_file():
    with open(sys.argv[1]) as f:
        for number in f:
            num = int(number)
            if num % 2 == 0:
                print("{:d}={}*{}".format(num, num // 2, 2))
            else:
                p = pollards_rho(num)
                f1 = p
                f2 = int(num / p)
                print("{}={}*{}".format(num, f1, f2))


if __name__ == "__main__":
    read_file()
